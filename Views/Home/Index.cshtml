@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Users</h2>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var user in Model.Users)
                        {
                            <li class="list-group-item">@user.UserName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Teams</h2>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var team in Model.Teams)
                        {
                            <li class="list-group-item">@team.TeamName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
