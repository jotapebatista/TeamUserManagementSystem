@model TeamUserManagementSystem.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container">
    <h1 class="mt-4">Delete User</h1>

    <h3>Are you sure you want to delete this user?</h3>

    <dl class="row">
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserEmail)</dd>
        <dt class="col-sm-2">Teams</dt>
        <dd class="col-sm-10">
            @foreach (var team in Model.UserTeams)
            {
                <span>@team.Team.TeamName</span>
                @if (!team.Equals(Model.UserTeams.Last()))
                {
                    <span>, </span>
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
